        <RichTextBox Name="txtDescription" HorizontalAlignment="Left" Height="96" Margin="12,116,0,0" VerticalAlignment="Top" Width="260" FontSize="10" IsReadOnly="True" IsTabStop="False" >
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Label Name="lblDescription" Content="Description" HorizontalAlignment="Left" Height="23" Margin="9,90,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Name="btnBack" Content="Back" HorizontalAlignment="Left" Height="27" Margin="105,217,0,0" VerticalAlignment="Top" Width="73" IsTabStop="False" Click="btnBack_Click"/>

    </Grid>
</Window>
